import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt(),i,j;
        char a='A';
        for(i=0;i<n;i++){
            for(j=0;j<=i;j++){
                 a=(char)('A'+i+j);
                System.out.print(a+" ");
                a++;
            }
            System.out.println();
        }
    }
}
